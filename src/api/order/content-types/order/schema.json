{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "shipped",
        "cancelled",
        "received"
      ],
      "default": "pending",
      "required": true
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "shippingCost": {
      "type": "decimal"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "customer-info.order-item",
      "required": true
    },
    "customerInfo": {
      "type": "component",
      "repeatable": false,
      "component": "customer-info.customer-info",
      "required": true
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "customer-info.address",
      "required": true
    },
    "orderNumber": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "unique_order_number": {
      "type": "uid",
      "required": true
    }
  }
}

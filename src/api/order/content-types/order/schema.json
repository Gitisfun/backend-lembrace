{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "unique_order_number": {
      "type": "uid",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "processing",
        "shipped",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "pending",
      "required": true
    },
    "orderDate": {
      "type": "datetime"
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "shippingCost": {
      "type": "decimal"
    },
    "customerId": {
      "type": "string"
    },
    "customerInfo": {
      "type": "component",
      "repeatable": false,
      "component": "customer-info.customer-info",
      "required": true
    },
    "shippingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "customer-info.address",
      "required": true
    },
    "billingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "customer-info.address",
      "required": true
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "customer-info.order-item",
      "required": true
    },
    "statusLogs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-status-log.order-status-log",
      "mappedBy": "order"
    },
    "localeCustomer": {
      "type": "string",
      "default": "en"
    }
  }
}

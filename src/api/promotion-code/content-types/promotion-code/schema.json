{
  "kind": "collectionType",
  "collectionName": "promotion_codes",
  "info": {
    "singularName": "promotion-code",
    "pluralName": "promotion-codes",
    "displayName": "Promotion Code",
    "description": "Promotion codes for discounts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "discount": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 100
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "subcategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::subcategory.subcategory"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    }
  }
}
